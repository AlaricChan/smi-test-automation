                "hwPowerMonitoring" : ["REMOVE : 1"]
            }
        },
        "test_one_one_good_one_bad_credentials":
        {
            "auto_run": true,
            "description": "Send one good and one bad ip, check for one result",
            "payload":
            [
                "COMBINE : 1",
                {
                    "userName": "foo",
                    "password": "bar"
                }
            ],
            "response": 
            {
                "hwPowerMonitoring" : ["REMOVE : 1"]
            }
        },

                {
                    "userName": "foo",
                    "password": "bar"
                }
            ],
            "status_code": ["400"],
            "response": {"REMOVE": ["all"]}
        },
        "test_one_one_good_one_nonexistent_ip":
        {
            "auto_run": true,
            "description": "Send one good and one nonexistent ip, check for one result",
            "payload":
            [
                "COMBINE : 1",
                {
                    "serverAddress": "100.100.100.100"
                }
            ],
            "response": 
            {
                "hwPowerMonitoring" : ["REMOVE : 1"]
            }
        },
        "test_one_one_good_one_bad_ip":
        {
            "auto_run": true,

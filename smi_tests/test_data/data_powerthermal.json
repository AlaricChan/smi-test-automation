{

    "post": 
    {
        "test_base":
        {
            "path": "/api/1.0/powerthermal",
            "payload":
            {
                "serverAddress": "100.68.124.121",
                "userName": "root",
                "password": "calvin"
            },
            "response":
            {
                "powerCap": "401  W"
            }
        },

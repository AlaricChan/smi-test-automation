									{
										"ipAddress": "100.68.124.98",
										"status": "SUCCESS"
									}
								]
							}
						]
					}
				]
			},
			"test_server":
			{
				"description": "Only search for server, check that it is found",
				"payload":
				{
					"deviceType": ["REMOVE : 1"],
					"ips": ["REMOVE : 1"]
				},
				"response": ["REMOVE : 1"]
			},
			"test_only_server_ip":
			{
				"description": "Only search using ip, check that server is found",
				"payload":
				{
					"REMOVE": ["credential", "deviceType"],
					"ips": ["REMOVE : 1"]
				},
				"response": ["REMOVE : 1"]
			}
		}
    },

    "range": 
    {
        "path": "/api/1.0/discover/range",
        "test_data": 
        {
			"test_base":

						"userName": "root",
						"password": "calvin"
					},
					"deviceType": 
					[
						"SERVER",
						"CHASSIS"
					],
					"ips": 
					[
						"100.68.124.95",
						"100.68.124.98"
					]
					
				},
				"response":
				[
					{
						"deviceGroup": "SERVER",
						"discoveredDeviceList":
						[
							{
								"deviceName": "IDRAC8",
								"discovered": 1,
								"discoveredDeviceInfoList":
								[
									{
										"ipAddress": "100.68.124.95",
